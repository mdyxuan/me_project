<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfileActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- 用戶信息框框 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp"
                android:background="@drawable/rounded_border_profile"
                android:layout_marginBottom="20dp">

                <TextView
                    android:id="@+id/profile_username_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="用戶名稱"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/profile_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="用戶名稱"
                    android:padding="10dp"
                    android:background="@drawable/rounded_edittext_profile" />

                <TextView
                    android:id="@+id/profile_email_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="電子郵件"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/profile_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="電子郵件"
                    android:padding="10dp"
                    android:background="@drawable/rounded_edittext_profile" />

                <TextView
                    android:id="@+id/profile_phone_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="電話號碼"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/profile_phone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="電話號碼"
                    android:padding="10dp"
                    android:background="@drawable/rounded_edittext_profile" />

                <TextView
                    android:id="@+id/profile_ID_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="使用者ID"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/profile_ID"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="使用者ID"
                    android:padding="10dp"
                    android:background="@drawable/rounded_edittext_profile" />

                <Button
                    android:id="@+id/profile_save_button"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="保存"
                    android:background="@color/purple_500"
                    android:textColor="@android:color/white"
                    android:padding="15dp"
                    android:layout_marginTop="20dp" />
            </LinearLayout>

            <!-- 登出按鈕 -->
            <Button
                android:id="@+id/profileback"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="返回"
                android:background="@color/red"
                android:textColor="@android:color/white"
                android:padding="15dp"
                android:layout_marginTop="20dp" />

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
